FROM postgres:9.4
MAINTAINER Sean Siford <seaniefs@yahoo.com>

ENV POSTGIS_MAJOR 2.4
ENV POSTGIS_VERSION 2.4.4+dfsg-4.pgdg90+1

#RUN apt-get update \
